<!DOCTYPE html>
<html lang="nl">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header><%- include('../partials/header'); %></header>

    <main class="events">
      <h1><%= countEvents %> Gevonden event(s)</h1>

      <% data.forEach((item)=> { %>
      <div class="event-found">
        <div class="foto">
          <img src=" <%= item.foto %>" alt="title of img" />
        </div>
        <div class="data">
          <h2><%= item.eventnaam %></h2>
          <p><%= item.soort %></p>
          <p><%= item.locatie %></p>
          <p><%= item.datum %></p>
          <p><%= item.reistijd %></p>
          <p><%= item.tijd %></p>
          <p><%= item.grootte %></p>
          <section>
            <form>
              <button type="submit" name="aanmelden">Aanmelden</button>
            </form>
          </section>
        </div>
      </div>

      <% }) %>

      <aside class="side-menu">

          <h3>Jouw locatie:</h3>
          <div class="weer-cont">
            <p><%= weatherData.country_name %></p>
            <p><%= weatherData.city %></p>
            <p><%= weatherData.ip %></p>
            <p><%= weatherData.localtime %></p>
          </div>
            
      </aside>
    </main>
    <footer><%- include('../partials/footer'); %></footer>

    <script src="js/index.js"></script>
  </body>
</html>
