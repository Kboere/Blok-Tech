<form
	name="eventToevoegen"
	action="succes"
	method="post"
	class="survey-add"
	enctype="multipart/form-data"
>
	<h2 class="survey__panel__question"> Wat is de naam van het event? </h2>
	<fieldset class="survey__panel__period">
		<section class="form-group">
			<input
				type="text"
				name="naam"
				placeholder="bijvoorbeeld: Car Meeting Drachten"
			/>
		</section>
	</fieldset>

	<h2 class="survey__panel__question"> Wat is de datum van het event? </h2>
	<fieldset class="survey__panel__period">
		<section class="form-group">
			<input
				type="text"
				name="datum"
				placeholder="bijvoorbeeld: Car Meeting Drachten"
			/>
		</section>
	</fieldset>

	<h2 class="survey__panel__question"> Wat is de locatie van het event? </h2>
	<fieldset class="survey__panel__period">
		<section class="form-group">
			<input
				type="text"
				name="locatie"
				placeholder="bijvoorbeeld: Car Convetion Center, NL"
			/>
		</section>
	</fieldset>

	<h2 class="survey__panel__question">
		Vanaf hoelaat tot hoelaat is het event?
	</h2>
	<fieldset class="survey__panel__period">
		<section class="form-group">
			<input
				type="text"
				name="tijden"
				placeholder="bijvoorbeeld: 09:00 tot 18:00"
			/>
		</section>
	</fieldset>

	<h2 class="survey__panel__question">
		Hoeveel auto's komen er? (een schatting mag ook)
	</h2>
	<fieldset class="survey__panel__period">
		<section class="form-group">
			<input type="number" name="grootte" placeholder="bijvoorbeeld: 18" />
		</section>
	</fieldset>

	<h2 class="survey__panel__question"> Hoeveel kilometer is het event lang </h2>
	<fieldset class="survey__panel__period">
		<section class="form-group">
			<input type="number" name="reistijd" placeholder="bijvoorbeeld: 66" />
		</section>
	</fieldset>

	<h2 class="survey__panel__question"> Wat voor soort car event is het? </h2>
	<fieldset class="survey__panel__personaldetails">
		<section class="form-group">
			<select name="soort" id="dropdown">
				<option value>kies een categorie</option>
				<option value="JDM cars">JDM cars</option>
				<option value="Sportwagen">Sportwagen</option>
				<option value="Supercar">Supercar</option>
			</select>
		</section>
	</fieldset>

	<h2 class="survey__panel__question">
		Voeg een foto toe dat het event omschrijft
	</h2>
	<fieldset class="survey__panel__period">
		<section class="form-group">
			<input type="file" name="uploaded" accept="image/jpeg, image/png" />
		</section>
	</fieldset>

	<fieldset class="form-buttons">
		<button class="button" type="submit" id="submit" name="submit">
			Submit
		</button>
	</fieldset>
</form>
