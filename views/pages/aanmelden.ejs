<!DOCTYPE html>
<html lang="nl">
<head>
    <%- include('../partials/head'); %>
</head>
<body>
    <header>
        <%- include('../partials/header'); %>      
    </header>

    <main class="events">
        <h1> Gevonden event(s)</h1>

        <div class="event-found">
            <div class="foto">
                <img src=" <%= data.foto %>" alt="title of img">
            </div>
            <div class="data">
                <h2> <%= data.eventnaam %> </h2>
                <p> <%= data.soort %> </p>
                <p> <%= data.locatie %> </p>
                <p> <%= data.datum %> </p>
                <p> <%= data.reistijd %> </p>
                <p> <%= data.tijd %> </p>
                <p> <%= data.grootte %> </p>
            </div>

            <section>
                <form action="/aanmelden" method="POST">
                    <button type="submit" name="aanmelden">
                        Aanmelden
                      </button>
                </form>
            </section>
          </div>

    

        <aside class="side-menu">
            <h3>Auto's van andere</h3>
            <div class="auto-cont">
            </div>
        </aside>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

    <script src="js/index.js"></script>
</body>
</html>